        <h2 style="color: #333; font-size: 28px;">Submit Your Blog</h2>
        <form action="submit_blog.php" method="post">

            <!-- Title Input -->
            <div style="margin-bottom: 20px;">
                <label for="title" style="font-size: 18px;">Title:</label>
                <input type="text" id="title" name="title" style="width: 100%; padding: 10px; font-size: 16px; border: 1px solid #ddd; border-radius: 5px;" required>
